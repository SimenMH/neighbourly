{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "ignorePatterns": [
      "node_modules/*.js"
    ],
    "rules": {
        "indent": [
          "error",
          2
        ],
        "no-unused-vars": [
          1,
          {
            "ignoreRestSiblings": true
          }
        ],
        "keyword-spacing": "error",
        "linebreak-style": "error",
        "quotes": [
          "error",
          "single"
        ],
        "semi": "error",
        "space-before-blocks": "error",
        // "space-before-function-paren": "error",
        "no-undef": "off"
    }
}